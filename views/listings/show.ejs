<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
  </div>
</div>

<div class="card col-6 offset-3 show-card listing-card">
  <img
    src="<%= listing.image.url %>"
    class="card-img-top show-img"
    alt="listing_image"
  />

  <div class="card-body">
    <p class="card-text">
      Owned by
      <i><%= listing.owner ? listing.owner.username : "Unknown" %></i>
    </p>

    <p class="card-text"><%= listing.description %></p>
    <p class="card-text"><%= listing.price.toLocaleString("en-IN") %></p>
    <p class="card-text"><%= listing.location %></p>
    <p class="card-text"><%= listing.country %></p>
  </div>
</div>

<br>
<% if (currUser) { %>
  <% 
    var isOwner =
      listing.owner &&
      listing.owner._id &&
      listing.owner._id.equals(currUser._id);
  %>

  <div class="btns">
    <a
      href="<%= isOwner ? '/listings/' + listing._id + '/edit' : '#' %>"
      class="btn btn-dark col-1 offset-3 edit-btn <%= isOwner ? '' : 'disabled' %>"
      title="<%= isOwner ? '' : 'Only owner can edit this listing' %>"
    >
      Edit
    </a>

    <form
      method="POST"
      action="<%= isOwner ? '/listings/' + listing._id + '?_method=DELETE' : '#' %>"
      style="display:inline"
    >
      <button
        class="btn btn-dark offset-5"
        <%= isOwner ? '' : 'disabled' %>
        title="<%= isOwner ? '' : 'Only owner can delete this listing' %>"
      >
        Delete
      </button>
    </form>
  </div>
<% } %>
<div class="col-8 offset-3">
  <hr>

  <% if (currUser) { %>
    <h4>Leave a Review</h4>

    <form
      action="/listings/<%= listing._id %>/reviews"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input
          type="range"
          min="1"
          max="5"
          id="rating"
          name="review[rating]"
          class="form-range"
          required
        />
      </div>

      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="30"
          rows="5"
          class="form-control"
          required
        ></textarea>

        <div class="invalid-feedback">
          Please add some comments for the review
        </div>
      </div>

      <button class="btn btn-outline-dark">Submit</button>
    </form>
  <% } else { %>
    <p>Please <a href="/login">login</a> to leave a review.</p>
  <% } %>

  <hr>
  <h4>All Reviews</h4>

  <div class="row">
    <% for (var review of listing.reviews) { %>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
          <h5 class="card-title">
            @ <%= review.author ? review.author.username : "Anonymous User" %>
          </h5>

          <p class="card-text"><%= review.comment %></p>
          <p class="card-text"><%= review.rating %> stars</p>

          <% if (currUser && review.author && review.author._id.equals(currUser._id)) { %>
            <form
              method="POST"
              action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
            >
              <button class="btn btn-dark btn-sm">Delete</button>
            </form>
          <% } %>
        </div>
      </div>
    <% } %>
  </div>
</div>
